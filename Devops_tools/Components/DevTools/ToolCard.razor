@using Devops_tools.Models.DTOs

<div class="card tool-card h-100 shadow-sm">
    <div class="card-body d-flex flex-column text-center">
        <div class="tool-logo-container mb-3 text-center">
            @if (!string.IsNullOrEmpty(Tool.LogoUrl))
            {
                <img src="@Tool.LogoUrl" alt="@Tool.LogoAltText" class="tool-logo" style="height: 100px; width: auto;" />
            }
            else
            {
                <div class="placeholder-logo">
                    <i class="bi bi-tools fs-1 text-secondary"></i>
                </div>
            }
        </div>

        <h3 class="card-title fs-4">@Tool.Name</h3>

        @if (Tool.GitHubStars.HasValue)
        {
            <div class="github-stars mb-3">
                <i class="bi bi-star-fill text-warning"></i>
                <span>@Tool.GitHubStars.Value.ToString("N0")</span>
            </div>
        }

        <div class="mt-auto">
            <button class="btn btn-outline-primary btn-sm px-4" @onclick="OnCardClick">LÃ¤s mer</button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public ToolDto Tool { get; set; } = new();

    [Parameter]
    public EventCallback OnCardClick { get; set; }
}